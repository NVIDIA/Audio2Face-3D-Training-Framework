{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "flake8 lint",
            "type": "shell",
            "command": "flake8",
            "args": [
                "."
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "build",
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): (\\w\\d+) (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        }
    ]
}
